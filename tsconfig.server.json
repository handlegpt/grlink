{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node", "express", "cors", "dotenv", "mongoose"],
    "allowJs": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "noEmit": false
  },
  "include": ["src/server/**/*"],
  "exclude": ["node_modules", "src/client"]
} 